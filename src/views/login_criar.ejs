<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-2"></div>

    <div>
      <h1 class="text-center">Criar conta</h1>
      <p class="text-center lead">Preencha os campos para criar sua conta.</p>

      <%- include('includes/messages'); %>

      <form class="form-login" action="/login/register" method="POST">
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <input type="hidden" name="tipoUsuario" value="Usuario">
        <div class="form-group">
          <label>Seu e-mail</label>
          <input type="email" class="form-control" name="email">
        </div>
        <div class="form-group">
          <label>Sua senha</label>
          <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Criar minha conta</button>
        </div>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>