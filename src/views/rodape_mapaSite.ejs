  <h1>Mapa do Site</h1>
  <div class="row" class="container-fluid" style="width: 100%; padding: auto; margin: auto;">
    <div id="chart_div">

    </div>
      <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
      <script type="text/javascript">
        google.charts.load('current', { packages: ["orgchart"] });
        google.charts.setOnLoadCallback(drawChart);
        function drawChart() {
          var data = new google.visualization.DataTable();
          data.addColumn('string', 'Name');
          data.addColumn('string', 'Manager');
          data.addRows([
            [{ 'v': 'Home', 'f': '<a href="/">Home</a>'  }, ''],

            [{ 'v': 'Usuario', 'f': 'Usuários' }, 'Home'],
            [{ 'v': 'Usu_Cadastro', 'f': '<a href="/contato/index">Cadastrar</a>' }, 'Usuario'],
            [{ 'v': 'Usu_Lista', 'f': '<a href="/contato/contato_lista">Listar</a>' }, 'Usuario'],

            ['Login', 'Usuario'],
            [{ 'v': 'Log_Validar', 'f': '<a href="/contato/login_validar">Validar Login</a>' }, 'Login'],
            [{ 'v': 'Log_Lista', 'f': '<a href="/login/lista">Listar</a>' }, 'Login'],

            [{ 'v': 'Veiculo', 'f': 'Veículos' }, 'Home'],
            [{ 'v': 'Veic_Cadastro', 'f': '<a href="/veiculo/veiculo_cad">Cadastrar</a>' }, 'Veiculo'],
            [{ 'v': 'Veic_Lista', 'f': '<a href="/veiculo/veiculo_lista">Listar</a>' }, 'Veiculo'],

            ['Despesas', 'Home'],
            [{ 'v': 'Desp_Cadastro', 'f': '<a href="/despesa/index">Cadastrar</a>' }, 'Despesas'],
            [{ 'v': 'Desp_Lista', 'f': '<a href="/despesa/despesa_lista">Listar</a>' }, 'Despesas'],
            [{ 'v': 'Desp_Graf', 'f': '<a href="/despesa/despesa_grafico">Grafico</a>' }, 'Despesas'],
            [{ 'v': 'Desp_Graf-1', 'f': '<a href="/despesa/despesa_grafico1">Grafico-I</a>' }, 'Despesas'],

            [{ 'v': 'Ficha', 'f': 'Ficha de Uso' }, 'Home'],
            [{ 'v': 'Ficha_Cadastro', 'f': '<a href="/uso/uso_abrir">Abrir</a>' }, 'Ficha'],
            [{ 'v': 'Ficha_Lista', 'f': '<a href="/uso/uso_lista">Listar</a>' }, 'Ficha'],

            [{ 'v': 'Entrar', 'f': 'Entrar' }, 'Home'],
            [{ 'v': 'Log', 'f': '<a href="/login/index">Login</a>' }, 'Entrar'],


          ]);
          var chart = new google.visualization.OrgChart(document.getElementById('chart_div'));
          chart.draw(data, { allowHtml: true });
        }

        // Redesenhar o gráfico quando a janela for redimensionada
        window.onresize = function() {
          drawChart();
        };
      </script>

