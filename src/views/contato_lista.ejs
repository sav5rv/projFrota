<%- include('includes/head') %>
<%- include('includes/nav') %>

<!-- <div class="container"> -->
  <div class="row" class="container-fluid" style="width: 100%; padding: auto; margin: auto;">

    <div class="col-lg-12">
      <div class="text-center">
        <img src="/img/despesa.jpg" style="width:50px;height:50px;">
        <h4>Usuários</h4>
        <p>Relação dos usuários cadastrados - CONTATO_LISTA</p>
        <p><%- include('includes/messages') %></p>
      </div>
      

      <% if(contatos.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-striped">
          <thead>
            <tr>
                <th>Nome</th>
                <th>EMail</th>
                <th>Celular</th>
                <th>RE</th>
                <th>Tipo Usuário</th>
                <th>Registro CNH</th>
                <th>Categoria CNH</th>
                <th>Validade CNH</th>
                <th>Observações</th>
                <th>Editar</th>
                <th>Excluir</th>
            </tr>
        </thead>
          <% contatos.forEach(contato => { %>
          <tr>
            <td><%= contato.nome %></td>
            <td><%= contato.email %></td>
            <td><%= contato.celular %></td>
            <td><%= contato.re %></td>
            <td><%= contato.tipoUsuario %></td>
            <td><%= contato.cnhRegistro %></td>
            <td><%= contato.categoria %></td>
            <td><%= contato.validade %></td>
            <td><%= contato.obs %></td>
            <td><a href="/contato/contato_lista/<%= contato._id %>">Editar</a></td>
            <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
          </tr>
          <% }); %>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">Não existem usuários cadastrados.</p>
      <% } %>

    </div>
    
  </div>
<!-- </div> -->

<%- include('includes/footer') %>
