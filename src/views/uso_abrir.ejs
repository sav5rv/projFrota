<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="page-header">
            <h4 class="text-center">Abrir ficha de Uso do Veículo</h4>
          </div>

          <div class="panel panel-default">
            <div class="panel-heading">
              <% if ( uso._id ) { %>
                <h3 class="panel-title">Altere os campos abaixo para editar o registro.</h3>
              <% } else { %>
                <h3 class="panel-title">Preencha os campos abaixo para fazer o cadastro.</h3>
              <% } %>
            </div>

            <div class="panel-body">

              <%- include('includes/messages') %>

                <% if( uso._id ) { %>
                  <form id="frm1" action="/uso/edit/<%= uso._id %>" method="POST" class="form-horizontal"
                    novalidate="novalidate">
                    <% } else { %>
                      <form id="frm1" action="/uso/register" method="POST" class="form-horizontal"
                        novalidate="novalidate">
                        <% } %>

                          <input type="hidden" name="_csrf" value=<%=csrfToken %>>

                          <div class="form-group">
                            <label class="col-sm-4 control-label" for="email">Email do usuário</label>
                            <div class="col-sm-5">
                              <input value="<%= login_email.email %>" type="email" class="form-control" id="email"
                                name="email" readonly>
                            </div>
                          </div>

                          
                          <div class="form-group">
                            <label class="col-sm-4 control-label" for="nome">Nome do usuário</label>
                            <div class="col-sm-5">
                              <input value="<%= login_email.nome %>" type="text" class="form-control" id="nome"
                              name="nome" readonly>
                            </div>
                          </div>
                          
                          <div class="form-group">
                            <label class="col-sm-4 control-label" for="re">Reg Estatístico</label>
                            <div class="col-sm-5">
                              <input value="<%= login_email.re %>" type="number" class="form-control" id="re"
                              name="re" readonly>
                            </div>
                          </div>

                          <div class="form-group">
                            <label class="col-sm-4 control-label" for="rso">RSO número</label>
                            <div class="col-sm-5">
                              <input value="<%= uso.rso %>" type="number" class="form-control" id="rso"
                                name="rso" maxlength="6" minlength="6" placeholder="0004" required>
                            </div>
                          </div>
                          
                          <div class="form-group">
                            <label class="col-sm-4 control-label" for="placa">Placa</label>
                            <div class="col-sm-5">
                              <input value="<%= uso.placa %>" type="text" class="form-control" id="placa"
                                name="placa" maxlength="7" minlength="7" placeholder="XXX9X99" pattern="[A-Z]{3}[A-Z0-9]{4}" required>
                            </div>
                          </div>

    
                              <div class="form-group">                            
                                <label class="col-sm-4 control-label" for="hodometroInicio" id="label_inicio">Hodômetro Inicial</label>
                                <div class="col-sm-5">
                                  <input value="<%= uso.hodometroInicio %>" type="number" class="form-control" id="hodometroInicio"
                                    name="hodometroInicio" maxlength="6" minlength="6" placeholder="000006" required>
                                </div>
                              </div>

                              <div class="form-group">
                                <label class="col-sm-4 control-label" for="dataInicio" id="label_inicio">Data Inicial</label>
                                <div class="col-sm-5">
                                  <input value="<%= uso.dataInicio %>" type="date" class="form-control" name="dataInicio" id="dataInicio">
                                </div>
                              </div>

                            <div class="form-group">
                              <label class="col-sm-4 control-label" for="horaInicio" id="label_inicio">Hora Inicial</label>
                              <div class="col-sm-5">
                                <input value="<%= uso.horaInicio %>" type="time" class="form-control" name="horaInicio" id="horaInicio">
                              </div>
                            </div>




            </div>
          </div>

                          <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <button type="reset" class="btn btn-primary">Cancelar</button>
                            <button type="button" class="btn btn-primary" onclick="myFunction()">Try it</button>
                          </div>
                      </form>
                      <p id="demo">A Paragraph</p>
        </div>
      </div>
    </div>


        <%- include('includes/footer') %>

          <script type="text/javascript" src="/js/validaCampoUso.js"></script>



</body>

</html>