<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Utilização</h1>
      <p class="text-center lead">Registro de utilização do veículo.</p>

      <%- include('includes/messages') %>

      <% if(uso._id) { %>
      <form class="needs-validation" novalidate action="/uso/edit/<%= uso._id %>" method="POST">
      <% } else { %>
      <form class="needs-validation" novalidate action="/uso/register" method="POST">
      <% } %>

        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <div class="form-group">
          <label>EMail do usuário</label>
          <input value="<%= uso.email %>" type="email" class="form-control" name="email">
        </div>
        <div class="form-group">
          <label>Placa</label>
          <input value="<%= uso.placa %>" type="text" class="form-control" name="placa" placeholder="modelo: ABP4Y12" pattern="[A-Z]{3}[A-Z0-9]{4}">
        </div>
        <div class="form-group">
          <label>Hodômetro Inicial</label>
          <input value="<%= uso.hodometroInicio %>" type="text" class="form-control" name="hodometroInicio" placeholder="modelo: 000456123" pattern="[0-9]{9}">
        </div>
        <div class="form-group">
          <label>Data Inicial</label>
          <input value="<%= uso.dataInicio %>" type="date" class="form-control" name="dataInicio">
        </div>
        <div class="form-group">
          <label>Hora Inicial</label>
          <input value="<%= uso.horaInicio %>" type="time" class="form-control" name="horaInicio">
        </div>
        <div class="form-group">
          <label>RSO número</label>
          <input value="<%= uso.rso %>" type="text" class="form-control" name="rso" placeholder="modelo: 0004" pattern="[0-9]{4}">
        </div>
        <div class="form-group">
          <label>Hodômetro Final</label>
          <input value="<%= uso.hodometroFim %>" type="text" class="form-control" name="hodometroFim" placeholder="modelo: 000456123" pattern="[0-9]{9}">
        </div>
        <div class="form-group">
          <label>Data Final</label>
          <input value="<%= uso.dataFim %>" type="date" class="form-control" name="dataFim">
        </div>
        <div class="form-group">
          <label>Hora Final</label>
          <input value="<%= uso.horaFim %>" type="time" class="form-control" name="horaFim">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>


    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
