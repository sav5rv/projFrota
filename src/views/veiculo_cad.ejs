<%- include('includes/head') %>
  <%- include('includes/nav') %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3">
        <h1 class="text-center">Veículos</h1>
        <p class="text-center lead">Preencha os campos abaixo para cadastrar um veículo.</p>

        <%- include('includes/messages') %>

        <% if(veiculo._id) { %>
          <form id="frm1" action="/veiculo/edit/<%= veiculo._id %>" method="POST" class="form-horizontal" novalidate="novalidate">
        <% } else { %>
          <form id="frm1" action="/veiculo/register" method="POST" class="form-horizontal" novalidate="novalidate">
        <% } %>

          <input type="hidden" name="_csrf" value=<%= csrfToken %>>

          <div class="form-group">
            <label class="col-sm-4 control-label" for="placa">Placa</label>
            <div class="col-sm-5">
              <input value="<%= veiculo.placa %>" type="text" class="form-control" id="placa" name="placa" maxlength="5" minlength="5" placeholder="modelo: EHP5H90" >
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-4 control-label" for="renavan">Renavan</label>
            <div class="col-sm-5">
              <input value="<%= veiculo.renavan %>" type="text" class="form-control" id="renavan" name="renavan" maxlength="9" minlength="9"  placeholder="modelo: 000123789" >
            </div>
          </div>



          <div class="form-group">
            <label>Chassi</label>
            <input value="<%= veiculo.chassi %>" type="text" class="form-control" name="chassi">
          </div>

          <div class="form-group">
            <label>Prefixo (cód identificação)</label>
            <input value="<%= veiculo.prefixo %>" type="text" class="form-control" name="prefixo">
          </div>

          <div class="form-group">
            <label>Hodômetro</label>
            <input value="<%= veiculo.hodometro %>" type="text" class="form-control" name="hodometro">
          </div>
          <div class="form-group">
            <label>Combustível</label>
            <input value="<%= veiculo.combustivel %>" type="text" class="form-control" name="combustivel">
          </div>
          <div class="form-group">
            <label>Quantidade de Rodas</label>
            <input value="<%= veiculo.rodas %>" type="text" class="form-control" name="rodas">
          </div>
          <div class="form-group">
            <label>Cor</label>
            <input value="<%= veiculo.cor %>" type="text" class="form-control" name="cor">
          </div>
          
          <button type="submit" class="btn btn-primary">Salvar</button>
          <button type="button" onclick="myFunction()">Try it</button>
        </form>
        <p id="demo">A Paragraph</p>

      </div>
      
      <div class="col-lg-2"></div>
    </div>
  </div>

  <%- include('includes/footer') %>

  <script src="/js/validaCampoVeicCad.js"></script>

  
  
  </body>
</html>
